- snippet('header')

section.container
	h2.section__title Watch
	ul.row
		- foreach ($page->video_data()->toStructure() as $video):
			li.col-sm-4
				- if($video->iframe()->isNotEmpty()):
					.iframe-wrapper
						!= $video->iframe()
				- elseif($src = $page->image($video->src())):
					img.item__image(src="<?= $src->url() ?>")
				- endif
				.item__details
					.item__category!= $video->category()
					.item__title--serif!= $video->title()
		- endforeach

.container
	hr.hr--folklife

section.container
	h2.section__title Listen
	ul.row.row--listen
		- foreach ($page->audio_data()->toStructure() as $audio):
			- if($src = $page->image($audio->src())):
				li.col-xs-6.col-sm-3
					.audio__block
						img.item__image(src="<?= $src->url() ?>")
						.item__details.item__details--audio
							.item__category!= $audio->category()
							.item__title--sans!= $audio->title()
							.item__subtitle--sans.album-title!= $audio->album()
							.audio-player
								.icon-play-button.icon-stack
									.icon-circle
									.icon-play
								.audio-player__details
									.audio-progress-bar
									.audio-time
										|0:00 &vert;
										!= $audio->length()
									.volume
			- endif
		- endforeach

.container
	hr.hr--folklife

section.container
	h2.section__title Participate
	ul.row
		- foreach ($page->events()->toStructure() as $event):
			- if($src = $page->image($event->src())):
				li.col-xs-6.col-sm-3
					img.item__image(src="<?= $src->url() ?>")
					.item__details
						.item__date!= $event->event_date()
						.item__title--sans--alt!= $event->title()
			- endif
		- endforeach

section.container.section--talk-story
	h2.section__title Talk Story
	.row
		.col-sm-8.talk-story__feature.clearfix
			.talk-story__feature__inner
				- if($src = $page->image($page->talk_story_feature_image())):
					img(src="<?= $src->url() ?>")
				- endif
				.banner__textbox.talk-story__textbox
					.item__category!= $page->talk_story_feature_category()
					.talk-story__textbox__title!= $page->talk_story_feature_title()
					.talk-story__textbox__subtitle!= $page->talk_story_feature_subtitle()
		ul.col-sm-4.talk-story__featurette-list
			- foreach ($page->talk_story_featurettes()->toStructure() as $featurette):
				- if($src = $page->image($featurette->src())):
					li.talk-story__featurette
						img.talk-story__featurette__image(src="<?= $src->url() ?>")
						.talk-story__featurette__details
							.talk-story__featurette__category.item__category= $featurette->category()
							.talk-story__featurette__title= $featurette->title()
							.talk-story__featurette__subtitle= $featurette->subtitle()
				- endif
			- endforeach

section.container.section--dive-deep
	h2.section__title Dive Deep
	.row
		.col-sm-8.dive-deep__feature.clearfix
			.dive-deep__feature__inner
				- if($src = $page->image($page->dive_deep_feature_image())):
					img(src="<?= $src->url() ?>")
				- endif
				.banner__textbox.dive-deep__textbox
					.item__category!= $page->dive_deep_feature_category()
					.dive-deep__textbox__title!= $page->dive_deep_feature_title()
		ul.col-sm-4.dive-deep__featurette-list
			- foreach ($page->dive_deep_featurettes()->toStructure() as $featurette):
				- if($src = $page->image($featurette->src())):
					li.dive-deep__featurette
						img.dive-deep__featurette__image(src="<?= $src->url() ?>")
						.dive-deep__featurette__details
							.dive-deep__featurette__category.item__category= $featurette->category()
							.dive-deep__featurette__title= $featurette->title()
				- endif
			- endforeach

.container
	hr.hr--folklife

.container
	.row
		section.col-sm-6.section--half.section--explore-collections
			h2.section__title Explore Collections		
			ul.row.explore-collections__featurette-list
				- foreach ($page->explore_collections_featurettes()->toStructure() as $featurette):
					- if($src = $page->image($featurette->src())):
						li.col-sm-6.explore-collections__featurette
							img.explore-collections__featurette__image(src="<?= $src->url() ?>")
							.explore-collections__featurette__details
								.explore-collections__featurette__title= $featurette->title()
					- endif
				- endforeach

		section.col-sm-6.section--half.section--teach
			h2.section__title Teach
		
			//- ul.row.teach__featurette-list
				- foreach ($page->dive_deep_featurettes()->toStructure() as $featurette):
					- if($src = $page->image($featurette->src())):
						li.col-sm-6.teach__featurette
							img.teach__featurette__image(src="<?= $src->url() ?>")
							.teach__featurette__details
								.teach__featurette__category.item__category= $featurette->category()
								.teach__featurette__title= $featurette->title()
					- endif
				- endforeach
			
.container
	hr.hr--folklife

- snippet('footer')
