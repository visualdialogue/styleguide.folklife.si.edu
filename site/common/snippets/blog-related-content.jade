.related-content.sidebar-section
	h2.sidebar-section-title.related-content-title Related Content
	-if($page->template() == 'blog-article'):
		// blog article sidebar
		ul.row
			-foreach($page->siblings(false)->visible()->filterBy('tags','basque',',')->limit(3) as $card):
				-snippet('card', array('card' => $card, 'card_classes' => 'col-xs-12 sidebar-card' ))
			-endforeach
	-elseif($page->template() == 'magazine-article'):
		// magazine article sidebar
		ul.row
			-foreach($pages->find('blog')->children()->visible()->limit(3) as $card):
				-snippet('card-horizontal', array('card' => $card, 'card_classes' => 'col-xs-12 top-border-card sidebar-card horizontal-card', 'image_col' => 'col-xs-6', 'details_col' => 'col-xs-6', 'excerpt' => 12 ))
			-endforeach
	-else:
		// program sidebar
		ul.row
			-foreach($pages->find('blog')->children()->visible()->filterBy('tags','basque',',')->limit($limit) as $card):
				-snippet('card-horizontal', array('card' => $card, 'card_classes' => 'col-xs-12 top-border-card sidebar-card horizontal-card', 'image_col' => 'col-xs-6', 'details_col' => 'col-xs-6', 'excerpt' => 12 ))
			-endforeach
	-endif

	