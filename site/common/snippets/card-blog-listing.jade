//- use thumbnail if itâ€™s set in panel
-if ('' != $card->thumbnail_img()):
	-$image = $card->image($card->thumbnail_img())
- elseif($src = $card->image()):
	-$image = $src
-endif

li.card.card-horizontal.col-xs-12.border-top
	.row
		.image.col-sm-6
			a(href="<?= $card->url() ?>")
				img(src="<?= $image->url() ?>")
		.video(data-video-id='<?= $card->video_id() ?>' data-title='<?= $card->title() ?>' data-description='<?= $card->copy() ?>')
			.center-box
				.modal-trigger
					img(src="<?= $image->url() ?>")
				.icon-play-button.video-icon-play-button.icon-stack
					.icon-circle
					.icon-play
		.details.col-sm-6
			.details-inner
				.tag!= $card->festival(), ', ', $card->program();

				a.high(href="<?= $card->url() ?>").title: span.light: span.er= $card->title()

				.date!= $card->date('F jS, Y'), e('' != $card->author(), ' | ' . $card->author()), ' | 0 comments'
				
				.description.link-underline
					p!= excerpt($card->copy()->kt(), 25, 'words')

				-snippet('more-link', array('link' => $card->url()))