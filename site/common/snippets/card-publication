li.card.horizontal-card(class="<?= $card_classes ?><? if ($card->type() == 'video') echo ' video-card' ?>")
	.row
		-if ($card->type() == 'video'):
			.video(class="<?= $image_col ?>" data-video-id='<?= $card->video_id() ?>' data-title='<?= $card->title() ?>' data-description='<?= excerpt($card->copy(), 25, "words") ?> <a href=\'#\'>more</a>')
				.center-box
					.modal-trigger
						img(src="<?= $image->url() ?>")
					.icon-play-button.video-icon-play-button.icon-stack
						.icon-circle
						.icon-play
		-else:
			.image(class="<?= $image_col ?>")
				a(href="<?= $card->url() ?>")
					img(src="<?= $image->url() ?>")
		-endif
		.details(class="<?= $details_col ?>")
			.details-inner
				-if('' != $card->category()):	
					.tag!= $card->category()
				-endif

				-if (isset($date) && isset($time)):
					.tag!= $card->date('M d, Y'), '<br />', $card->time()
				-elseif (isset($date)):
					.tag!= $card->date()
				-endif

				//- if subtitle, group with title for correct highlighting
				-if('' != $card->subtitle()):	
					a.high(href="<?= $card->url() ?>")
						.title: span.light: span.er= $card->title()
						.subtitle: span.light: span.er= $card->subtitle()
				-else:
					a.high(href="<?= $card->url() ?>").title: span.light: span.er= $card->title()
				-endif

				//- blurb
				-if (isset($blurb)):
					.description.link-underline.blurb!= $card->blurb()->kt()
				-endif
				
				-if (isset($excerpt)):
					.description.link-underline
						p!= excerpt($card->copy()->kt(), $excerpt, 'words')
				-endif

				-if (isset($more_link)):
					-snippet('more-link', array('link' => $card->url()))
				-endif
