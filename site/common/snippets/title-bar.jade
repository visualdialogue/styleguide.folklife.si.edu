.title-bar
	.container.title-height
		//- if custom title passed
		-if (isset($title)):
			//- if link passed
			-if (isset($link)):
				a(href="<?= $link ?>"): h1.page-title= $title
			//- no link passed
			-else:
				h1.page-title= $title
			-endif
		//- if no title passed
		- else:
			h1.page-title= $page->title()
		-endif
	-if (isset($subtitle)):
	//- hr.thin-hr
	img(class="thin-hr-svg svg" src="/assets/images/icons/cfch_thinline.svg")
	.container.subtitle-height
		.page-subtitle= $subtitle
	-endif