//- use thumbnail if itâ€™s set in panel
-if ('' != $card->thumbnail_img()):
	-$image = $card->image($card->thumbnail_img())
- elseif($src = $card->image()):
	-$image = $src
-endif

li.card.blog-feature.col-xs-12
	.image
		a(href="<?= $card->url() ?>")
			img.card__image(src="<?= $image->url() ?>")
	.video(data-video-id='<?= $card->video_id() ?>' data-title='<?= $card->title() ?>' data-description='<?= $card->copy() ?>')
		.center-box
			.modal-trigger
				img.card__image(src="<?= $image->url() ?>")
			.icon-play-button.icon-play-button--video.icon-stack
				.icon-circle
				.icon-play
	.details
		.details__inner
			.category!= $card->festival(), ', ', $card->program();

			a.high(href="<?= $card->url() ?>").title.card__title: span.light: span.er= $card->title()

			.date!= $card->date('F jS, Y'), e('' != $card->author(), ' | ' . $card->author()), ' | 0 comments'
			
			.description.card__description.link-underline
				p!= excerpt($card->copy()->kt(), 55, 'words')

			-snippet('more-link', array('link' => $card->url()))