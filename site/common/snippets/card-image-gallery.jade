-$gallery_img = $card->image($card->gallery_img())

.image-gallery
	.center-box
		.modal-trigger
			img.gallery-thumbnail(src="<?= $gallery_img->url() ?>" alt="Gallery image")
		.icon-gallery

	ul.gallery-list
		-foreach($card->images()->filterBy('filename', '*=', 'slide') as $image):
			.gallery-image
				.gallery-image-inner
					img(src="<?= $image->url() ?>" alt="Gallery image")
		-endforeach
	ul.gallery-list-captions
		-foreach($card->images()->filterBy('filename', '*=', 'slide') as $image):
			.gallery-caption
				.remodal-description!= $image->caption()
				.remodal-credit!= $image->credit()
		-endforeach
