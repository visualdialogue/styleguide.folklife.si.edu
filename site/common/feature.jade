.feature--full
	.row
		.feature__image-wrapper.clearfix(class="col-sm-<? if(isset($img_width)) echo $img_width ?>")
			- if($src = $feature->image($feature->img())):
				img(src="<?= $src->url() ?>")
			- endif
		.feature__details.details.details--inset.details--notop(class="col-sm-<? if(isset($copy_width)) echo $copy_width ?>")
			.title= $feature->title()
			
			.description.feature__description.link-underline!= $feature->blurb()->kt()
			
			- if (isset($excerpt)):
				.description.feature__description.link-underline
					p!= excerpt($feature->description()->kt(), $excerpt, 'words')
			- else:
				.description.feature__description.link-underline!= $feature->description()->kt()
			- endif

			- snippet('more-link')